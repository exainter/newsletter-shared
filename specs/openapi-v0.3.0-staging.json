    "/insights": {
      "get": {
        "tags": [
          "insights"
        ],
        "summary": "Get Aggregated Insights",
        "description": "Get aggregated campaign metrics for the authenticated tenant.\n\nThis endpoint scans the campaign_agg table and aggregates metrics by campaign_id.\nIt returns summary statistics and per-campaign breakdowns.",
        "operationId": "get_aggregated_insights_insights_get",
        "parameters": [
          {
            "name": "period",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "description": "Optional period filter (e.g., '2025-10')",
              "title": "Period"
            },
            "description": "Optional period filter (e.g., '2025-10')"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AggregatedInsightsResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
