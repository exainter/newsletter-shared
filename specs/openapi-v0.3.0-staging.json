  "components": {
    "schemas": {
      "AggregatedInsightsResponse": {
        "properties": {
          "tenant_id": {
            "type": "string",
            "title": "Tenant Id"
          },
          "period": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Period"
          },
          "campaigns": {
            "items": {
              "$ref": "#/components/schemas/CampaignMetrics"
            },
            "type": "array",
            "title": "Campaigns"
          },
          "summary": {
            "$ref": "#/components/schemas/AggregatedSummary"
          }
        },
        "type": "object",
        "required": [
          "tenant_id",
          "campaigns",
          "summary"
        ],
        "title": "AggregatedInsightsResponse",
        "description": "Response for GET /insights endpoint"
      },
      "AggregatedSummary": {
        "properties": {
          "total_sent": {
            "type": "integer",
            "title": "Total Sent",
            "default": 0
          },
          "total_open_rate": {
            "type": "number",
            "title": "Total Open Rate",
            "default": 0.0
          },
          "total_click_rate": {
            "type": "number",
            "title": "Total Click Rate",
            "default": 0.0
          },
          "total_bounce_rate": {
            "type": "number",
            "title": "Total Bounce Rate",
            "default": 0.0
          }
        },
        "type": "object",
        "title": "AggregatedSummary",
        "description": "Summary metrics across all campaigns"
      },
      "CampaignMetrics": {
        "properties": {
          "campaign_id": {
            "type": "string",
            "title": "Campaign Id"
          },
          "name": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Name"
          },
          "sent": {
            "type": "integer",
            "title": "Sent",
            "default": 0
          },
          "opened": {
            "type": "integer",
            "title": "Opened",
            "default": 0
          },
          "clicked": {
            "type": "integer",
            "title": "Clicked",
            "default": 0
          },
          "bounced": {
            "type": "integer",
            "title": "Bounced",
            "default": 0
          },
          "unsubscribed": {
            "type": "integer",
            "title": "Unsubscribed",
            "default": 0
          },
          "timestamp": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Timestamp"
          }
        },
        "type": "object",
        "required": [
          "campaign_id"
        ],
        "title": "CampaignMetrics",
        "description": "Metrics for a single campaign"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "InsightsResponse": {
        "properties": {
          "interval": {
            "type": "string",
            "enum": [
              "day",
              "hour"
            ],
            "title": "Interval"
          },
          "series": {
            "type": "object",
            "title": "Series"
          },
          "summary": {
            "$ref": "#/components/schemas/Summary"
          },
          "cursor": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Cursor"
          }
        },
        "type": "object",
        "required": [
          "interval",
          "summary"
        ],
        "title": "InsightsResponse"
      },
      "Summary": {
        "properties": {
          "totals": {
            "$ref": "#/components/schemas/SummaryTotals"
          },
          "rates": {
            "$ref": "#/components/schemas/SummaryRates"
          }
        },
        "type": "object",
        "required": [
          "totals",
          "rates"
        ],
        "title": "Summary"
      },
      "SummaryRates": {
        "properties": {
          "open_rate": {
            "type": "number",
            "title": "Open Rate",
            "default": 0.0
          },
          "click_rate": {
            "type": "number",
            "title": "Click Rate",
            "default": 0.0
          },
          "bounce_rate": {
            "type": "number",
            "title": "Bounce Rate",
            "default": 0.0
          },
          "complaint_rate": {
            "type": "number",
            "title": "Complaint Rate",
            "default": 0.0
          }
        },
        "type": "object",
        "title": "SummaryRates"
      },
      "SummaryTotals": {
        "properties": {
          "delivered": {
            "type": "integer",
            "title": "Delivered",
            "default": 0
          },
          "opens": {
            "type": "integer",
            "title": "Opens",
            "default": 0
          },
          "clicks": {
            "type": "integer",
            "title": "Clicks",
            "default": 0
          },
          "bounces": {
            "type": "integer",
            "title": "Bounces",
            "default": 0
          },
          "complaints": {
            "type": "integer",
            "title": "Complaints",
            "default": 0
          }
        },
        "type": "object",
        "title": "SummaryTotals"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}